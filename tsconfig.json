{
  "include": ["src/**/*"],
  "exclude": ["bin/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "outDir": "./bin",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./bin"
  }
}
